{% extends 'base.html.twig' %}

{% block title 'Se connecter'%}

{% block body %}

    {{ include('admin/admin_property/includes.html.twig') }}
<form method="post" action="{{ path('login') }}">
    <div class="form-group">
        <label for="exampleInputEmail1">Username</label>
        <input type="text" name="_username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username" value="{{ last_username }}">
        <small id="usernameHelp" class="text-danger">{% if error  %} {{ error.messageKey | trans(error.messagedata, 'security') }} {% endif %}</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="_password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <small id="usernameHelp" class="text-danger">{% if error  %} {{ error.messageKey | trans(error.messagedata, 'security') }} {% endif %}</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

{% endblock %}
