{% extends 'base.html.twig' %}

{% block title property.title %}

{% block body %}

    <div class="row">
        <div class="col-md-8">

        </div>
        <div class="col-md-4">
            <h1>{{ property.title }}</h1>
            <h2>{{property.rooms > 1 ? " rooms" : " 1 room" }} - {{ property.surface }} M<sup>2</sup></h2>
            <div class="text-info font-weight-bold" style="font-size: 4rem">{{ property.formattedPrice }} $</div>
            <button class="btn btn-outline-info">Contact agency</button>
        </div>
    </div>
    <p>{{ property.description | nl2br }}</p>

    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped">
                <tr>
                    <td>Surface habitable</td>
                    <td>{{ property.surface }} m<sup>2</sup></td>
                </tr>

                <tr>
                    <td>Rooms</td>
                    <td>{{ property.rooms }}</td>
                </tr>

                <tr>
                    <td>Chambres</td>
                    <td>{{ property.bedrooms }}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">

        </div>
    </div>
{% endblock %}